<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${timestamp}-linux</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/jdbc-api-test/bin</directory>
            <outputDirectory>jdbc_api_test/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>jdbc-api-test</include>
                <include>wrapper-linux*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/jdbc-api-test/lib</directory>
            <outputDirectory>jdbc-api-test/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
                <include>libwrapper-linux*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>jdbc-api-test/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/logs</directory>
            <outputDirectory>jdbc-api-test/logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</assembly>
